{
  "name": "petshop",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "v18.12.1"
  },
  "scripts": {
    "client-install": "npm install --prefix client",
    "api": "nodemon --exec ts-node index.ts",
    "migration:generate": "typeorm-ts-node-commonjs -d ./api/src/data-source.ts migration:generate ./api/src/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./api/src/data-source.ts migration:run",
    "build": "rimraf ./dist && tsc",
    "start": "node dist/index.js",
    "client": "npm start --prefix client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typeorm": "^0.3.10",
    "uuid": "^9.0.0"
  }
}
